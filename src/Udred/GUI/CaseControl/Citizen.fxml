               </rowConstraints>
               <children>
                  <TableView fx:id="tableViewCitizenCases" accessibleText="De sager som borgeren er involvert i" onMouseEntered="#mouseEnter" onMouseExited="#mouseExit" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
