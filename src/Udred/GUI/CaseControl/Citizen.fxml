                        <TableColumn prefWidth="75.0" text="SagsID" />
                        <TableColumn prefWidth="75.0" text="Type" />
                        <TableColumn prefWidth="252.0" text="Beskrivelse" />
                     </columns>
                  </TableView>
                  <Label text="Sager:" />
