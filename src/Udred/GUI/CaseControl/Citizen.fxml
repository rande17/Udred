                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <TextField fx:id="TextFieldCitizenCPR" accessibleText="Borgerens CPR nummer" onMouseEntered="#mouseEnter" onMouseExited="#mouseExit" promptText="000000-0000">
